{
    "family": "documentportaltd",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::217777498407:role/ecsTaskExecutionRole",
    "containerDefinitions": [
      {
        "name": "document-portal-container",
        "image": "REPLACED_BY_GITHUB_ACTION",
        "essential": true,
        "portMappings": [
          { "containerPort": 8080, "protocol": "tcp" }
        ],
        "environment": [
          { "name": "ENV", "value": "production" },
          { "name": "LANGCHAIN_PROJECT", "value": "DOCUMENT PORTAL" }
        ],
        "secrets": [
          { "name": "GROQ_API_KEY",      "valueFrom": "arn:aws:secretsmanager:ap-south-1:217777498407:secret:prod/document-portal-TgMyqX:GROQ_API_KEY::" },
          { "name": "HF_TOKEN",          "valueFrom": "arn:aws:secretsmanager:ap-south-1:217777498407:secret:prod/document-portal-TgMyqX:HF_TOKEN::" },
          { "name": "GOOGLE_API_KEY",    "valueFrom": "arn:aws:secretsmanager:ap-south-1:217777498407:secret:prod/document-portal-TgMyqX:GOOGLE_API_KEY::" },
          { "name": "LANGCHAIN_API_KEY", "valueFrom": "arn:aws:secretsmanager:ap-south-1:217777498407:secret:prod/document-portal-TgMyqX:LANGCHAIN_API_KEY::" }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/documentportal",
            "awslogs-region": "ap-south-1",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ]
  }
  